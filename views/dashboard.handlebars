

<h2 class="mx-auto">Welcome {{user.username}}</h2>

<div class="mx-auto">
<button class="btn reveal-btn">
<h3>Create a New Post:</h3>
</button>

<form class="form new-post-form hidden">
    <div class="form-group">
        <label for="post-name">Post Title:</label>
        <input class="form-input" type="text" id="post-name" name="post-name" />
    </div>
    <div class="form-group">
        <label for="post-body">Post Body:</label>
        <input class="form-input" type="text" id="post-body" name="post-body" />
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
    </div>
</form>
</div>

<h3 class="mx-auto my-4">Your Previous Posts:</h3>


{{#each posts as |post|}}
<div class='mb-4 d-flex post-list mx-auto'>
    <a href="/post/{{post.id}}">
        <button class="btn btn-warning">
            <h2>{{post.title}}</h2>
            <h5>{{post.body}}</h5>
            <p>Posted by: {{post.user.username}}</p>
            <p>{{format_date post.createdAt}}</p>
        </button>
    </a>
        <div>
            <button class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
        </div>
</div>
{{/each}}




<script src="./js/dashboard.js"></script>



